@model pdvPRO.DTO.FornecedorDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Editar fornecedor</h3>
<hr />
<form class="form-horizontal" asp-controller="Fornecedores" asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="Id"/>

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do fornecedor">
    <span asp-validation-for="Nome"></span>

    <label asp-for="Email">E-mail</label>
    <input type="email" asp-for="Email" class="form-control" placeholder="email@fornecedor.com.br">
    <span asp-validation-for="Email"></span>

    <label asp-for="Telefone">Telefone</label>
    <input asp-for="Telefone" class="form-control" placeholder="99 9 9999-9999">
    <span asp-validation-for="Telefone"></span>

    <br /><button class="btn btn-success">Atualizar</button>
</form>